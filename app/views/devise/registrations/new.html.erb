<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="text-center">
        <div class="col-xs-12">
          <h2>Sign up</h2>
          <br />

          <div class="form-horizontal">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <div class="col-xs-4">
                  <%= f.label :name, "Name", class: "form-label" %>
                </div>
                <div class="col-xs-8">
                  <%= f.text_field :name, autofocus: true, class: "form-control" %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-4">
                  <%= f.label :email, "Email", class: "form-label" %>
                </div>
                <div class="col-xs-8">
                  <%= f.text_field :email, autocomplete: "email", class: "form-control" %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-4">
                  <%= f.label :password, "Password", class: "form-label" %>
                </div>
                <div class="col-xs-8">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control" %><br />
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-4">
                  <%= f.label :password_confirmation, class: "form-label" %>
                </div>
                <div class="col-xs-8">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                </div>
              </div>

              <div class="form-group">
                <%= f.submit "Sign up", class: "btn btn-info" %>
              </div>
            <% end %>
            
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
    
  </div>
</div>


