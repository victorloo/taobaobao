<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="text-center">

        <div class="col-xs-12 col-md-6">
          <div class="overlay">
            <div class="login-photo">
              <h3>一起購物吧！</h3>
            </div>
          </div>
        </div>

        <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-1">
          <div class="col-xs-4">
            <h3><%= link_to "登入", new_user_session_path %></h3>
          </div>
          <div class="col-xs-4"></div>
          <div class="col-xs-4">
            <h3><%= link_to "註冊", new_user_registration_path %></h3>
          </div>
          <br />

          <div class="form-horizontal">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="form-group">
                <div class="col-xs-3">
                  <%= f.label :email, "電子信箱", class: "form-label" %>
                </div>
                <div class="col-xs-9">
                  <%= f.text_field :email, autocomplete: "email", class: "form-control" %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-3">
                  <%= f.label :password, "密碼", class: "form-label" %>
                </div>
                <div class="col-xs-9">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                </div>
              </div>
              
              <div class="form-group">
                <% if devise_mapping.rememberable? -%>
                  <div class="ckeckbox">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, "記住我" %>
                  </div>
                <% end -%>
              </div>
              

              <div class="form-group">
                <div class="login-button">
                  <%= f.submit "登入", class: "btn btn-info" %>
                </div>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>

