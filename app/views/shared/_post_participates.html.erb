<% obj.each do |participate| %> 
  <div class="col-md-4 col-xs-12 portfolio-item">
    <div class="product-item">
      <a href="#portfolioModal5" class="portfolio-link" data-toggle="modal">
        <div class="portfolio-hover">
          <div class="portfolio-hover-content">
            <i class="fa fa-plus fa-3x"></i>
          </div>
        </div>
       
        <div class="pi-img-wrapper">
          <%= link_to post_path(participate.post), target: "_blank", :class => 'button white' do %>
            <%= image_tag participate.post.photo, class: "img-responsive" %>
          <% end %>
        </div>
      </a>

      <div class="portfolio-caption" style="text-align:left">

        <% if participate.post.opening? %>
          <h3>
            <%= participate.post.title %>
            <span class="label label-warning">開團中</span>
          </h3>

          <h4>
            價格：<%= participate.post.price %>
            目前人數：<%= participate.post.participates_count %> 人
          </h4>
        
        <% elsif participate.post.ending? %>
          <h3>
            <%= participate.post.title %> 
            <span class="label label-success">已結團</span>
          </h3>

          <h4>
            價格：<%= participate.post.price %>
            目前人數：<%= participate.post.participates_count %> 人
          </h4>

        <% else %>
          <h3>
            <%= participate.post.title %> 
            <span class="label label-danger">已流團</span>
          </h3>
          
          <h4>
            價格：<%= participate.post.price %>
            目前人數：<%= participate.post.participates_count %> 人
          </h4>

        <% end %>
      </div>
    </div>
  </div>
<% end %>

