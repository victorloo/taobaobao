<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="col-xs-12">
        
          <div class="col-xs-12 col-md-6">
            <div class="avatar">
              <%= image_tag @user.avatar, class: "img-responsive center-block" if @user.avatar? %>
            </div>
          </div>

          <div class="col-xs-12 col-md-6">
            <div class="user-info">
              <h2><%= @user.name %></h2>
              <p><%= simple_format(@user.intro) %></p>
              <p>參團數： <%= @user.participates.count %></p>
              <% if current_user == @user %>
                <%= link_to "Edit Profile",edit_user_path(@user), class: "btn btn-success" %>
              <% end %>
            </div>
          </div>
          <br>
        
      </div>
    </div>

    <div class="col-xs-12 col-md-8">
      <div class="post-lists">
        <hr>
        <h4>主購：</h4>
        <%= render partial: "shared/post_lists", locals: { obj: @user.posts } %>
      </div>
    </div>

    <div class="col-xs-12 col-md-4">
      <div class="post-lists">
        <hr>
        <h4>參加：</h4>
        <%= render partial: "shared/post_participates", locals: { obj: @user.participates } %>
      </div>
    </div>
  </div>
</div>
