<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="col-xs-12">
        <% if current_user == @user %>
          
          <div class="col-xs-12 col-md-6">
            <div class="avatar">
              <%= image_tag @user.avatar, class: "img-responsive center-block" if @user.avatar? %>
            </div>
          </div>

          <div class="col-xs-12 col-md-6">
            <div class="user-info">
              <h2><%= @user.name %></h2>
              <p><%= simple_format(@user.intro) %></p>
              <p>參團數： <%= @user.participates.count %></p>
              <%= link_to "Edit Profile",edit_user_path(@user), class: "btn btn-success" %>
            </div>
          </div>

        <% end %>
      </div>
      <hr />
      
    </div>
  </div>
</div>
